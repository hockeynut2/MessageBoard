<div id="toolbar">
  <a href="/out"><button class="btn toolbar_button btn-primary" style="width: 50%">Sign out</button></a>
  <a href="/users"><button class="btn toolbar_button btn-primary" style="width: 50%">View all users</button></a>
</div>

<div style="height: 95px"> </div>

<div style="text-align: center"><img src="images/marvellogo.png" style="height: 40px; width: 85px"></div>

<h2 style="text-align: center">Threads</h2>

<table class="table thread-table" style="border-bottom: 1px solid white; background-color: white">
  <tr>
    <th>Topic</th>
    <th>Description</th>
    <th style="width: 250px">Created at</th>
    <th></th>
  </tr>
  <% @topics.each do |thread| %>
      <tr class="thread-row">
        <td><a href="/thread/<%= thread.id.to_s %>" style="text-decoration: none"><%= thread.topic %></a></td>
        <td><%= thread.description %></td>
        <td style="width: 250px"><%= thread.time %></td>
        <td><form method="post" action="/thread/<%= thread.id %>/delete" class="remove-form">
          <input type="submit" value="Remove" class="btn btn-danger">
        </form></td>
      </tr>
  <% end %>
</table>

<form method="post" action="/threads/create" class="form-inline">
  <div class="form-group">
  <input placeholder="Thread Name" name="topic" class="center">
    </div>
  <div class="form-group">
  <textarea placeholder="Description" name="description" style="width: 150px; height: 100px" class="center"></textarea>
  </div>
    <input type="submit" class="btn btn-primary">
</form>